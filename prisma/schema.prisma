generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  cities    City[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  preferences UserPreference?
}

model City {
  id        String   @id @default(cuid())
  name      String
  country   String
  lat       Float
  lon       Float
  order     Int      @default(0)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([name, country])
}

model WeatherCache {
  id        String   @id @default(cuid())
  cityName  String
  country   String
  lat       Float
  lon       Float
  data      String
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model UserPreference {
  id        String   @id @default(cuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  units     String   @default("metric")
  theme     String   @default("neon")
  mode      String   @default("dark")
  updatedAt DateTime @updatedAt
}
